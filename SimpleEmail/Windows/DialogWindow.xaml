<Window x:Class="SimpleEmail.Windows.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SimpleEmail.Windows"
        BorderThickness="0"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowState="Normal"
        WindowStyle="None">

    <!-- See IDialog Controller -->
    <Border x:Name="LoadingContainer" 
            Opacity="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            CornerRadius="3"
            Background="White" 
            BorderBrush="Gray" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" x:Name="HeaderContainer" HorizontalAlignment="Left">
                <Image Height="20" Width="20" Stretch="Uniform" Source="/Resources/Images/icon.png" Margin="5 5 0 5" />
                <TextBlock x:Name="TitleTB" FontSize="14" Foreground="#FF555555" Margin="5" HorizontalAlignment="Center" />
            </StackPanel>


            <ContentPresenter Content="{Binding}" Grid.Row="1" />

            <StackPanel x:Name="ButtonPanel"
                        Orientation="Horizontal" 
                        Grid.Row="2" 
                        HorizontalAlignment="Right" 
                        Margin="5">

                <Button x:Name="OkButton" 
                        Click="OkButton_Click" 
                        IsEnabled="{Binding ViewDataContext.ResultValid}"
                        Content="OK" Padding="5" Width="60" />

            </StackPanel>
        </Grid>

    </Border>
</Window>